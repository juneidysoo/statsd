{
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"MemberExpression": 0
			}
		],
		"semi": ["error", "always"],
		"space-before-function-paren": ["error", "always"],
		"space-before-blocks": ["error", "always"],
		"quotes": ["error", "single"],
		"key-spacing": ["error"],
		"no-multi-spaces": ["error"],
		"linebreak-style": ["error", "unix"],
		"max-len": ["error", 80, 3],
		"space-infix-ops": ["error"],
		"no-console": ["error", { "allow": ["error"] }]
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6
	},
	"env": {
		"node": true,
		"es6": true
	}
}
